<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HORALIFE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oudoiro</item>
        <item name="colorPrimaryVariant">@color/oudoiro_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:datePickerStyle">@color/black</item>-->

    </style>

    <style name="BirthDayPickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/red</item>
        <item name="android:datePickerMode">spinner</item>

    </style>

            <style name="DatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog"/>

            <style name="DatePickerDialog.Spinner">
                <item name="android:datePickerStyle">@style/DatePickerDialogSpinnerDatePickerStyle</item>
            </style>

            <style name="DatePickerDialogSpinnerDatePickerStyle">

                <item name="android:datePickerMode">spinner</item>
            </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:buttonBarButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:datePickerStyle">@style/DatePickerDialogSpinnerDatePickerStyle</item>

    </style>
    <style name="PickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/oudoiro</item>
    </style>
</resources>